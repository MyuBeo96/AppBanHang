<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_Laptop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/img_HinhGioHang"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/txt_TieuDeGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tensp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/txt_GiaGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/giasp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorRed"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/txt_GiamGiaGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <ImageButton
                        android:id="@+id/btn_GiamSL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove_black"
                        android:background="@color/colorWhite"
                        android:padding="5dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_margin="5dp"
                        />

                    <TextView
                        android:id="@+id/txt_SoLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"

                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:layout_margin="5dp"
                        />

                    <ImageButton
                        android:id="@+id/btn_TangSL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_black"
                        android:background="@color/colorWhite"
                        android:padding="5dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_XoaGioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
